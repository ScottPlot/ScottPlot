<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScottPlotQuickstartWPF"
        xmlns:ScottPlot="clr-namespace:ScottPlot;assembly=ScottPlot" x:Class="ScottPlotQuickstartWPF.MainWindow"
        mc:Ignorable="d"
        Title="ScottPlot - WPF Demo" Height="404.808" Width="594.586">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button  Content="Add Plot" Width="75"  Click="AddPlot"/>
            <Button  Content="Clear"    Width="75"  Click="Clear"  Margin="10,0,0,0"/>
        </StackPanel>
        <ScottPlot:WpfPlot Grid.Row="1" Name="wpfPlot1" />
    </Grid>
</Window>
