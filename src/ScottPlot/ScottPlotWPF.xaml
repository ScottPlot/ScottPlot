<UserControl x:Class="ScottPlot.ScottPlotWPF"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ScottPlot"
             mc:Ignorable="d" 
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}">
        <Canvas Name="canvasPlot" SizeChanged="CanvasPlot_SizeChanged" MouseMove="CanvasPlot_MouseMove">
            <Image Name="imagePlot" MouseDown="ImagePlot_MouseDown" MouseUp="ImagePlot_MouseUp"/>
        </Canvas>
    </Grid>
</UserControl>
