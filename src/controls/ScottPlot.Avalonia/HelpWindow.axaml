<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ScottPlot.Avalonia.HelpWindow"
        Width="350"
        Height="450"
        Title="HelpWindow">
    <DockPanel>
        <TextBlock DockPanel.Dock="Top" Text="ScottPlot" FontSize="36" HorizontalAlignment="Center"/>
        <TextBlock DockPanel.Dock="Top" Text="X.X.X" FontSize="18" Margin="0 0 0 0" HorizontalAlignment="Center" Name="VersionLabel"/>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="ScottPlot Website" Padding="5 3 5 3" Margin="0 5 5 5" Click="LaunchScottPlotWebsite" />
            <Button Content="Close" Padding="5 3 5 3" Margin="0 5 5 5" Click="CloseButtonClicked"/>
        </StackPanel>
        <ScrollViewer ScrollViewer.VerticalScrollBarVisibility="Auto">
            <Border Padding="5">
                <TextBlock Text="information" Name="InfoTextBlock" FontSize="16"/>
            </Border>
        </ScrollViewer>
    </DockPanel>
</Window>
