<Window x:Class="ScottPlot.WPF.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScottPlot.WPF"
        mc:Ignorable="d"
        Background="WhiteSmoke"
        Title="Help" Height="500" Width="450">
    <DockPanel>
        <Label DockPanel.Dock="Top" Content="Mouse and Keyboard" FontSize="24"/>
        <Label DockPanel.Dock="Top" Content="X.X.X" FontSize="11" Margin="2 -10 0 0" Foreground="LightGray" Name="VersionLabel"/>
        <ScrollViewer ScrollViewer.VerticalScrollBarVisibility="Auto">
            <TextBlock Text="details..." Name="InfoTextBlock" Padding="5" FontSize="16"/>
        </ScrollViewer>
    </DockPanel>
</Window>
