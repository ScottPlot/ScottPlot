<Window x:Class="ScottPlot.Demo.WPF.DemoNavigator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScottPlot.Demo.WPF"
        xmlns:ScottPlot="clr-namespace:ScottPlot;assembly=ScottPlot.WPF"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Background="WhiteSmoke"
        Title="ScottPlot Demos (WPF)" Height="500" Width="950">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <GroupBox Grid.Column="0" Grid.Row="0" Header="Demo Plots" Margin="0,0,5,0">
            <TreeView x:Name="DemoTreeview" SelectedItemChanged="DemoSelected" BorderThickness="0" Background="WhiteSmoke"/>
        </GroupBox>

        <local:CookbookControl x:Name="DemoPlotControl1" Grid.Column="1" Grid.Row="0" Visibility="Hidden" />
        <local:AboutControl x:Name="AboutControl" Grid.Column="1" Grid.Row="0" Visibility="Visible" />

    </Grid>
</Window>
