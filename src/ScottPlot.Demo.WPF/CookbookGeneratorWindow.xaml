<Window x:Class="ScottPlot.Demo.WPF.CookbookGeneratorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScottPlot.Demo.WPF"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="ScottPlot Cookbook Generator" Height="400" Width="500">
    <DockPanel Margin="5">
        <DockPanel DockPanel.Dock="Top">
            <Button x:Name="GenerateButton" Content="Generate" Padding="5,3,5,3" DockPanel.Dock="Left" Click="GenerateClicked"/>
            <Button Content="Open Folder" Padding="5,3,5,3" DockPanel.Dock="Right" Click="OpenClicked"/>
            <ProgressBar x:Name="ProgressBar1" Margin="5,0,5,0" Value="23"/>
        </DockPanel>
        <Label Name="ProgressLabel" Content="generating 5 of 23: Quickstart..." DockPanel.Dock="Top"/>
        <Slider x:Name="ImageSlider" Visibility="Hidden" DockPanel.Dock="Bottom" ValueChanged="ImageSliderChanged" IsSnapToTickEnabled="True" TickFrequency="1" Maximum="10" TickPlacement="Both"/>
        <Image x:Name="PlotImage" />
    </DockPanel>
</Window>
