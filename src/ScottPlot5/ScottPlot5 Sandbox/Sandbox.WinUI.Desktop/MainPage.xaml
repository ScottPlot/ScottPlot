<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Sandbox.WinUI.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:Sandbox.WinUI"
    xmlns:ScottPlot="using:ScottPlot.WinUI"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Padding="10" Spacing="10">
            <TextBlock Text="Scale factor (%)" VerticalAlignment="Center"/>
            <NumberBox 
                x:Name="ScaleValueBox" 
                Value="100" 
                Minimum="80" 
                Maximum="200" 
                SpinButtonPlacementMode="Inline"
                SmallChange="10"
                LargeChange="25"
                Width="240"
                ValueChanged="ScaleValueBox_ValueChanged"/>
        </StackPanel>

        <ScottPlot:WinUIPlot Grid.Row="1" x:Name="WinUIPlot"/>
    </Grid>
</Page>