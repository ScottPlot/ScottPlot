<UserControl x:Class="WPF_Demo.DemoMenuItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Demo"
             mc:Ignorable="d" 
             Background="WhiteSmoke"
             d:DesignHeight="100" d:DesignWidth="400">
    <StackPanel>
        <GroupBox 
            x:Name="GroupBox1"
            BorderBrush="Gray"
            Header="Display Scaling"
            FontSize="14"
            Margin="5"
            BorderThickness="1"
            Padding="5"
            >
            <StackPanel Orientation="Horizontal">
                <Button x:Name="Button1" FontSize="14" Padding="5">Launch</Button>
                <TextBlock x:Name="TextBlock1" FontSize="14" Margin="10 0 0 0">Description goes here...</TextBlock>
            </StackPanel>
        </GroupBox>
    </StackPanel>
</UserControl>
