<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:vm="using:Avalonia_Demo.ViewModels"
		xmlns:ScottPlot="clr-namespace:ScottPlot.Avalonia;assembly=ScottPlot.Avalonia"
	    xmlns:local="clr-namespace:Avalonia_Demo"
	    xmlns:local.Controls="clr-namespace:Avalonia_Demo.Controls"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Avalonia_Demo.Demos.CookbookWindow"
	    x:DataType="vm:Demos.CookbookViewModel"
        Title="Cookbook"
		Background="WhiteSmoke"
		Foreground="Black"
		>
	<Grid RowDefinitions="*,auto" ColumnDefinitions="auto,*">
		<TreeView ItemsSource="{Binding Categories}" Grid.Column="0" Grid.Row="0" Grid.RowSpan="2">
			<TreeView.ItemTemplate>
				<TreeDataTemplate ItemsSource="{Binding Children}">
					<Panel>
						<Button
							Command="{Binding Select}"
							IsVisible="{Binding IsLeafNode}"
						>
							<TextBlock Text="{Binding Name}" />
							<Button.Styles>
								<Style Selector="Button">
									<Setter Property="Foreground" Value="Black" />
									<Setter Property="Background" Value="Transparent" />
								</Style>
								<Style Selector="Button:pointerover /template/ ContentPresenter">
									<Setter Property="Foreground" Value="Black" />
									<Setter Property="Background" Value="Transparent" />
								</Style>
							</Button.Styles>
						</Button>
						<TextBlock Text="{Binding Name}" IsVisible="{Binding !IsLeafNode}" Foreground="Black" />
					</Panel>
				</TreeDataTemplate>
			</TreeView.ItemTemplate>

			<TreeView.Styles>
				<Style Selector="TreeViewItem">
					<Style Selector="^:selected /template/ Border#PART_LayoutRoot">
						<Setter Property="Background" Value="Transparent" />
						<Setter Property="BorderBrush" Value="Transparent" />
					</Style>
				</Style>
			</TreeView.Styles>
		</TreeView>
		<ScottPlot:AvaPlot Name="AvaPlot" Grid.Row="0" Grid.Column="1" />
		<local.Controls:RecipeInfoBox
			Grid.Row="1"
			Grid.Column="1"
			DataContext="{Binding RecipeViewModel}"
		/>

		<Grid.Resources>
			<SolidColorBrush x:Key="TreeViewItemForeground"  Color="Black"/>
		</Grid.Resources>
	</Grid>
</Window>
