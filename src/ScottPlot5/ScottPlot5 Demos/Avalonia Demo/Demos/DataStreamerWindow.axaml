<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:vm="using:Avalonia_Demo.ViewModels.Demos"
		xmlns:ScottPlot="clr-namespace:ScottPlot.Avalonia;assembly=ScottPlot.Avalonia"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Avalonia_Demo.Demos.DataStreamerWindow"
		x:DataType="vm:DataStreamerViewModel"
        Title="Data Streamer">
	<Grid RowDefinitions="auto,*" Background="White">
		<DockPanel Grid.Row="0" Margin="16,16,16,0">
			<Button Margin="0,0,4,0" Command="{Binding SetViewMode}" CommandParameter="{x:Static vm:DataStreamerViewMode.Wipe}">
				Wipe	
			</Button>
			<Button Margin="0,0,4,0" Command="{Binding SetViewMode}" CommandParameter="{x:Static vm:DataStreamerViewMode.Scroll}">
				Scroll	
			</Button>
			<RadioButton
				GroupName="AxisOptions"
				Content="DataStreamer.ManageAxisLimits"
				IsChecked="{Binding SelectedDataStreamerAxisOption,
					Converter={StaticResource EnumToBooleanConverter},
					ConverterParameter={x:Static vm:DataStreamerAxisOptions.ManageAxisLimits}}"
				Margin="4,0,8,0"
			/>
			<RadioButton
				Margin="4,0,8,0"
				GroupName="AxisOptions"
				Content="Axis.ContinuouslyAutoscale"
				IsChecked="{Binding SelectedDataStreamerAxisOption,
					Converter={StaticResource EnumToBooleanConverter},
					ConverterParameter={x:Static vm:DataStreamerAxisOptions.ContinuouslyAutoscale}}"
			/>
			<Button IsVisible="{Binding SelectedDataStreamerViewMode,
					Converter={StaticResource EnumToBooleanConverter},
					ConverterParameter={x:Static vm:DataStreamerViewMode.Scroll}}"
					Click="OnMarkButtonClick"
			>
				Mark
			</Button>
		</DockPanel>
		<ScottPlot:AvaPlot Name="AvaPlot" Grid.Row="1" />
	</Grid>
</Window>
