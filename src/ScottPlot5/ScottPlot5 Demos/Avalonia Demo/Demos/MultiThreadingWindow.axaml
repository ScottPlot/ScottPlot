<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:ScottPlot="clr-namespace:ScottPlot.Avalonia;assembly=ScottPlot.Avalonia"
		mc:Ignorable="d"
		x:Class="Avalonia_Demo.Demos.MultiThreadingWindow"
		WindowStartupLocation="CenterScreen"
		Height="400" Width="600"
		Title="MultiThreading">
	<Grid RowDefinitions="*,auto">
		<ScottPlot:AvaPlot Grid.Row="0" Name="AvaPlot" />
		<StackPanel Grid.Row="1" Orientation="Horizontal" Name="ButtonStackPanel">
			<Label
                FontSize="18"
                VerticalAlignment="Center"
                Content="Continuously update using:"
                />
			<Button
                FontSize="18"
                Padding="10 5"
                Margin="5"
                VerticalContentAlignment="Center"
                Content="Timer"
                Click="StartTimer"
                />
			<Button
                FontSize="18"
                Padding="10 5"
                Margin="5"
                VerticalContentAlignment="Center"
                Content="DispatchTimer"
                Click="StartDispatchTimer"
                />
		</StackPanel>
	</Grid>
</Window>
