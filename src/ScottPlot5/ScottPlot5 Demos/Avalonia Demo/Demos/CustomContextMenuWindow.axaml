<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:ScottPlot="clr-namespace:ScottPlot.Avalonia;assembly=ScottPlot.Avalonia"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Avalonia_Demo.Demos.CustomContextMenuWindow"
        Title="Custom Right-Click Context Menu">
	<Grid RowDefinitions="auto,*" Background="White">
		<DockPanel Grid.Row="0" Margin="16,16,16,0">
			<Button Margin="0,0,4,0" Click="OnDefaultButtonClicked">
				Default
			</Button>
			<Button Click="OnCustomButtonClicked">
				Custom
			</Button>
		</DockPanel>
		<ScottPlot:AvaPlot Name="AvaPlot" Grid.Row="1" />
	</Grid>
</Window>
