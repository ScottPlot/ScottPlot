<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Avalonia_Demo.ViewModels"
			 x:DataType="vm:RecipeInfoViewModel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Avalonia_Demo.Controls.RecipeInfoBox">
	<StackPanel>
		<Label Content="{Binding Recipe.Name, FallbackValue=Unknown Recipe}" />

		<HeaderedContentControl
			BorderBrush="Gray"
			Header="Source Code"
			FontSize="14"
			Margin="5"
			BorderThickness="1"
			Padding="5"
            >
			<TextBlock
				Text="{Binding RecipeInfo.Source, FallbackValue=Source not found. Run test suites to generate JSON file.}"
			/>
		</HeaderedContentControl>
	</StackPanel>
</UserControl>
