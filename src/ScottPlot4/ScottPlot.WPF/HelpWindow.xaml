<Window x:Class="ScottPlot.WPF.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScottPlot.WPF"
        mc:Ignorable="d"
        Title="Help" Height="400" Width="300">
    <DockPanel>
        <Label DockPanel.Dock="Top" Content="ScottPlot" FontSize="36" HorizontalAlignment="Center"/>
        <Label DockPanel.Dock="Top" Content="X.X.X" FontSize="18" Margin="0 -20 0 0" HorizontalAlignment="Center" Name="VersionLabel"/>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="ScottPlot Website" Padding="5 3 5 3" Margin="0 5 5 5" Click="LaunchScottPlotWebsite" />
            <Button Content="Close" Padding="5 3 5 3" Margin="0 5 5 5" Click="CloseButtonClicked"/>
        </StackPanel>
        <ScrollViewer ScrollViewer.VerticalScrollBarVisibility="Auto">
            <TextBlock Text="information" Name="InfoTextBlock" Padding="5" FontSize="16"/>
        </ScrollViewer>
    </DockPanel>
</Window>
