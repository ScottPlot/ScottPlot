<UserControl x:Class="ScottPlot.Demo.WPF.AboutControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ScottPlot.Demo.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="500">
    <ScrollViewer ScrollViewer.VerticalScrollBarVisibility="Auto">
        <StackPanel Background="WhiteSmoke">
            <Label Content="ScottPlot Interactive Cookbook" FontSize="24" FontWeight="SemiBold" />
            <Label Name="VersionLabel" Content="version 8.8.88" FontSize="12" Margin="0,-18,0,0" Foreground="Gray" Width="109" HorizontalContentAlignment="Right" HorizontalAlignment="Left" />

            <TextBlock Padding="5,10,5,5" TextWrapping="Wrap" FontSize="14">
            This program displays ScottPlot cookbook recipes interactively.
            <LineBreak /><LineBreak />
            Although this program uses the WpfPlot to display plots interactively, the source code for each plot could
                be used in console applications and plots saved as images.
            </TextBlock>

        </StackPanel>
    </ScrollViewer>
</UserControl>
